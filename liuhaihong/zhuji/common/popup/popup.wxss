.popup{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  width: 100%;
  background: transparent;
  color: #050a1d;
  font-size: 36rpx;
  font-weight: 600;
}
.popup .item,.cancel{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #b1b1b1;
  background: #fff;
  font-size: 28rpx;
}
.popup .item:last-child{
  border: none;
}
.cancel{
  border: none;
  margin-top:10rpx;
  color: #595959;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: rgba(0, 0, 0, .6);
}