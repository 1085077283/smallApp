/* pages/welfare/welfare.wxss */

.welfare{
  padding-top: 20rpx;
}

.welfare .arrow{
  display: flex;
  align-items: center;
}

.welfare .arrow-right{
  width: 16rpx;
  height: 28rpx;
  margin-left: 40rpx;
}
.welfare .list .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top:1px solid #e9e9e9; 
  padding-right: 20rpx;
  background: #fff;
}
.welfare .item .img{
  margin:30rpx 30rpx 30rpx 20rpx; 
  display: flex;
  align-items: center;
}
.welfare .item .img image{
  width: 124rpx;
  height: 124rpx;
  border-radius: 10rpx;
}
.welfare .item .title{
  font-size: 28rpx;
  color: #333;
}